<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import it.example.controller.components.AnimatedButton?>
<?import it.example.controller.components.AnimatedChoiceBox?>
<?import it.example.controller.components.SyntaxHighlightTextArea?>
<?import it.example.controller.components.AnimatedTextField?>

<VBox xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" spacing="10.0" 
    fx:controller="it.example.controller.pages.coding.PageOneController"
    stylesheets="css/pages.css"
    fx:id="contentBox"
    >
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>

    <VBox alignment="CENTER" style="-fx-padding: 0 0 20 0;">
        <Label styleClass="h1, i, lbl-default" text="Generate your Java Code">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </Label>
    </VBox>

    <AnimatedChoiceBox fx:id="choiceBox" value="Formula">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Formula" />
                <String fx:value="Codice java" />
            </FXCollections>
        </items>
    </AnimatedChoiceBox>

    <AnimatedTextField fx:id="formulaTextField" styleClass="textfield" managed="${choiceBox.value == 'Formula'}"
                       visible="${choiceBox.value == 'Formula'}"/>
    
    <SyntaxHighlightTextArea fx:id="formulaTextArea" styleClass="textArea" managed="${choiceBox.value == 'Codice java'}"
                      visible="${choiceBox.value == 'Codice java'}"/>
    <AnimatedButton fx:id="generateButton" onAction="#generateChartButton" text="Generate" />
</VBox>
